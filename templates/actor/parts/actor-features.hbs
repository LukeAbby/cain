<div class="flex-group-center">
  <label for="system.xp.value" class="resource-label">XP</label> 
  <output>{{system.xp.value}}</output>
  <div class=" flexrow flex-center">
    <input type="range" name="system.xp.value" value="{{system.xp.value}}" min="0" max="4" step="1" data-dtype="Number" oninput="this.nextElementSibling.value = this.value">
  </div>
</div>

<div class="flex-group-center">
  <label for="system.advancements.value" class="resource-label">Advancement</label>
  <output>{{system.advancements.value}}</output>
  <div class="resource-content flexrow flex-center">
    <input type="range" name="system.advancements.value" value="{{system.advancements.value}}" min="0" max="4" step="1" data-dtype="Number" oninput="this.nextElementSibling.value = this.value">
  </div>
</div>

<multi-checkbox name="check-many-boxes">
  <optgroup label="Divine Agony">
    <option value="foo"></option>
    <option value="bar"></option>
    <option value="baz"></option>
  </optgroup>
  <optgroup label="Injuries">
   <option value="fizz"></option>
   <option value="buzz"></option>
   <option value="buzz"></option>
  </optgroup>
  <optgroup label="Stress">
   <option value="fizz"></option>
   <option value="buzz"></option>
   <option value="buzz"></option>
   <option value="fizz"></option>
   <option value="buzz"></option>
   <option value="buzz"></option>
  </optgroup>
</multi-checkbox>

<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create item'
        data-type='feature'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='feature'}}
      </a>
    </div>
  </li>
  {{#each features as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Edit" type='feature'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='feature'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>