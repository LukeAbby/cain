<h2> Kit Points & Scrip Amount </h2>
<div class="kit-points-scrip" style="display: flex; justify-content: center; margin-top:10px;">
    <div id="kit-points" style="display: flex; align-items: center; margin-right: 20px;">
        {{#range 0 system.kitPoints.max}}
          <input type="checkbox" class="kit-points-checkbox" {{#if (lt index ../system.kitPoints.value)}}checked{{/if}} />
        {{/range}}
        <span class="kit-points-text">{{system.kitPoints.value}} / {{system.kitPoints.max}}</span>
    </div>
    <div class="scrip" style="display: flex; align-items: center;">
        <label for="system.scrip" style="margin-right: 10px;">Scrip:</label>
        <input type="number" name="system.scrip" id="scrip" value="{{system.scrip}}" style="width: 100px; text-align: center;" />
    </div>
</div>

<h2> Gear </h2>
<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name-header'>Name </div>
    <div class='item-type'>Type</div>
    <div class='item-scrip'>{{localize 'Scrip'}}</div>
    <div class='item-kit-points'>{{localize 'Kit Points'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='Item'}}'
        data-type='item'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='item'}}
      </a>
    </div>
  </li>
  {{#each gear as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-type item-prop'>{{item.system.type}}</div>
      <div class='item-scrip item-prop'>{{item.system.scripValue}}</div>
      <div class='item-kit-points item-prop'>{{item.system.kitPoint}}</div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='Item'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='Item'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
        <a
          class='item-control item-description'
          title='{{localize "DOCUMENT.Description" type='Item'}}'
        >
          <i class='fas fa-info-circle'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>

<style>
  .items-list {
    background-color: #1a1a1a;
    color: #e0e0e0;
    font-family: 'Courier New', Courier, monospace;
    padding: 20px;
    border: 1px solid #444;
  }

  .items-header {
    background-color: #2c2c2c;
    border-bottom: 2px solid #444;
    padding: 10px;
  }

  .item-name-header {
    color: #ff0000;
    flex: 2;
  }

  .item-type {
    color: #00ff00;
    flex: 1;
  }

  .item-name h4 {
    color: #ff0000;
  }

  .item-scrip, .item-kit-points {
    color: #00ff00;
  }

  .item-controls a {
    color: #e0e0e0;
    margin-left: 5px;
  }

  .item-controls a:hover {
    color: #ff0000;
  }

  .kit-points-checkbox:checked {
    background-color: #ff0000;
  }

  .kit-points-text {
    color: #00ff00;
    margin-left: 10px;
    align-self: center;
  }

  .scrip {
    display: flex;
    align-items: center;
  }

  #scrip {
    background-color: #1a1a1a;
    color: #e0e0e0;
    border: 1px solid #444;
  }
</style>