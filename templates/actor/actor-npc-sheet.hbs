<form class="{{cssClass}} {{actor.type}} flexcol brooding-theme" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header dark-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      <div class="resources grid grid-3col">
        <div class="resource flex-group-center">
          <label for="system.sinType" class="resource-label">
            Sin Type
            <img src="systems/cain/assets/Sins/{{system.sinType}}.png" alt="{{system.sinType}}"/>
          </label>
          <div class="resource-content flexrow flex-center flex-between">
            <select id="sinTypeSelect" name="system.sinType">
              <option value="ogre" {{#if (eq system.sinType "ogre")}}selected{{/if}}>Ogre</option>
              <option value="toad" {{#if (eq system.sinType "toad")}}selected{{/if}}>Toad</option>
              <option value="idol" {{#if (eq system.sinType "idol")}}selected{{/if}}>Idol</option>
              <option value="lord" {{#if (eq system.sinType "lord")}}selected{{/if}}>Lord</option>
              <option value="hound" {{#if (eq system.sinType "hound")}}selected{{/if}}>Hound</option>
              <option value="centipede" {{#if (eq system.sinType "centipede")}}selected{{/if}}>Centipede</option>
            </select>
          </div>
        </div>
        <div class="resource flex-group-center">
          <label for="system.sinForm" class="resource-label">
            Sin Form
            <img src="systems/cain/assets/items/affliction.png" alt="form" />
          </label>
          <div class="resource-content flexrow flex-center flex-between">
            <select name="system.sinForm">
              <option value="Form I/Severed" {{#if (eq system.sinForm "Form I/Severed")}}selected{{/if}}>Form I/Severed</option>
              <option value="Form II/Fused" {{#if (eq system.sinForm "Form II/Fused")}}selected{{/if}}>Form II/Fused</option>
              <option value="Form III/Bound" {{#if (eq system.sinForm "Form III/Bound")}}selected{{/if}}>Form III/Bound</option>
            </select>
          </div>
        </div>
        <div class="resource flex-group-center">
          <label for="system.category" class="resource-label">
            Category
            <img src="systems/cain/assets/items/pathos.png" alt="category image"/>
          </label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.category" value="{{system.category}}" data-dtype="Number"/>
          </div>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs dark-tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="palace-pressure">Palace / Pressure</a>
    <a class="item" data-tab="attacks">Attacks</a>
    <a class="item" data-tab="domains">Domains</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body dark-body">

{{!-- Description Tab --}}
<div class="tab description" data-group="primary" data-tab="description">
  <div class="left-column">
    <div class="form-group dark-form-group">
      <label for="system.appearance">Appearance</label>
      <textarea name="system.appearance">{{system.appearance}}</textarea>
    </div>
    <div class="form-group dark-form-group">
      <label for="system.traumas">Traumas</label>
      <textarea name="system.traumas">{{system.traumas}}</textarea>
    </div>
  </div>
  <div class="right-column">
    <div class="form-group dark-form-group">
      <label for="system.biography">Biography</label>
      <div class="enriched-bio" contenteditable="true">{{system.biography}}</div>
    </div>
    <div class="form-group dark-form-group">
      <label for="system.afflictions">Afflictions</label>
      <table class="afflictions-table">
        <thead>
          <tr>
            <th>Affliction</th>
          </tr>
        </thead>
        <tbody>
          {{#each system.afflictions}}
            <tr>
              <td>{{this}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <button class="roll-affliction">Roll Affliction</button>
    </div>
  </div>
</div>

    {{!-- Palace / Pressure Tab --}}
    <div class="tab palace-pressure" data-group="primary" data-tab="palace-pressure">
      <div class="form-group dark-form-group">
        <label for="system.palace">Palace</label>
        <input type="text" name="system.palace" value="{{system.palace}}"/>
      </div>
      <div class="form-group dark-form-group">
        <label for="system.pressure">Pressure</label>
        <textarea name="system.pressure">{{system.pressure}}</textarea>
      </div>
    </div>

    {{!-- Attacks Tab --}}
    <div class="tab attacks" data-group="primary" data-tab="attacks">
      <div class="form-group dark-form-group">
        <label for="system.attackRoll.lowDamage">Roll Damage</label>
        <input type="text" name="system.attackRoll.lowDamage" value="{{system.attackRoll.lowDamage}}"/>
      </div>
      <div class="form-group dark-form-group">
        <label for="system.attackRoll.mediumDamage">Medium Damage</label>
        <input type="text" name="system.attackRoll.mediumDamage" value="{{system.attackRoll.mediumDamage}}"/>
      </div>
      <div class="form-group dark-form-group">
        <label for="system.attackRoll.highDamage">High Damage</label>
        <input type="text" name="system.attackRoll.highDamage" value="{{system.attackRoll.highDamage}}"/>
      </div>
      <div class="form-group dark-form-group">
        <label for="system.attackRoll.rollFormula">Roll Formula</label>
        <input type="text" name="system.attackRoll.rollFormula" value="{{system.attackRoll.rollFormula}}"/>
      </div>
      <div class="form-group dark-form-group">
        <label for="system.severeAttack.description">Severe Attack Description</label>
        <textarea name="system.severeAttack.description">{{system.severeAttack.description}}</textarea>
      </div>
      <div class="form-group dark-form-group">
        <label for="system.severeAttack.rollFormula">Severe Attack Roll Formula</label>
        <input type="text" name="system.severeAttack.rollFormula" value="{{system.severeAttack.rollFormula}}"/>
      </div>
    </div>

    {{!-- Domains Tab --}}
    <div class="tab domains" data-group="primary" data-tab="domains">
      <div class="form-group dark-form-group">
        <label for="system.selectedAbilities.selectedAbility1">Domain 1</label>
        <select name="system.selectedAbilities.selectedAbility1" class="ability-select" data-ability="1">
          {{#each system.domains}}
            <option value="{{this.value}}" {{#if (eq ../system.selectedAbilities.selectedAbility1 this.value)}}selected{{/if}}>{{this.title}}</option>
          {{/each}}
        </select>
        <p class="ability-value" data-ability="1">{{system.selectedAbilities.selectedAbility1}}</p>
        <p class="error-message" data-error="1" style="display: none; color: red;">Please choose another Domain ability.</p>
      </div>
      <div class="form-group dark-form-group">
        <label for="system.selectedAbilities.selectedAbility2">Domain 2</label>
        <select name="system.selectedAbilities.selectedAbility2" class="ability-select" data-ability="2">
          {{#each system.domains}}
            <option value="{{this.value}}" {{#if (eq ../system.selectedAbilities.selectedAbility2 this.value)}}selected{{/if}}>{{this.title}}</option>
          {{/each}}
        </select>
        <p class="ability-value" data-ability="2">{{system.selectedAbilities.selectedAbility2}}</p>
        <p class="error-message" data-error="2" style="display: none; color: red;">Please choose another Domain ability.</p>
      </div>
      <div class="form-group dark-form-group">
        <label for="system.selectedAbilities.selectedAbility3">Domain 3</label>
        <select name="system.selectedAbilities.selectedAbility3" class="ability-select" data-ability="3">
          {{#each system.domains}}
            <option value="{{this.value}}" {{#if (eq ../system.selectedAbilities.selectedAbility3 this.value)}}selected{{/if}}>{{this.title}}</option>
          {{/each}}
        </select>
        <p class="ability-value" data-ability="3">{{system.selectedAbilities.selectedAbility3}}</p>
        <p class="error-message" data-error="3" style="display: none; color: red;">Please choose another Domain ability.</p>
      </div>
    </div>

  </section>
</form>

<style>
  .brooding-theme {
    background-color: #1a1a1a;
    color: #e0e0e0;
    font-family: "Courier New", Courier, monospace;
  }
  
  .dark-header {
    background-color: #1a1a1a;
    color: #e0e0e0;
    border-bottom: 2px solid #444;
    padding: 20px;
    box-shadow: 0 0 10px 2px #000;
  }
  
  .dark-header select option {
    background-color: #1a1a1a;
    color: #e0e0e0;
  }

  .profile-img {
    border: 2px solid #444;
    border-radius: 50%;
    box-shadow: 0 0 10px 2px #000;
  }
  
  .header-fields {
    margin-left: 20px;
  }
  
  .charname input {
    font-size: 24px;
    background-color: #1a1a1a;
    color: #e0e0e0;
    border: none;
    border-bottom: 2px solid #444;
    padding: 5px;
  }
  
  .resources {
    margin-top: 20px;
  }
  
  .resource-label {
    font-size: 18px;
    color: #e0e0e0;
  }
  
  .resource-content select,
  .resource-content input {
    background-color: #1a1a1a;
    color: #e0e0e0;
    border: 1px solid #444;
    padding: 5px;
  }
  
  .resource-content img {
    filter: grayscale(100%);
    margin-left: 10px;
  }
  
  .flex-group-center {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .flexrow {
    display: flex;
    flex-direction: row;
  }
  
  .flex-center {
    justify-content: center;
  }
  
  .flex-between {
    justify-content: space-between;
  }
  
  .grid-3col {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
  }
  
  .dark-tabs .item {
    background-color: #333;
    color: #e0e0e0;
  }
  
  .dark-body {
    background-color: #1a1a1a;
  }
  
  .dark-form-group {
    background-color: #2a2a2a;
    border: 1px solid #444;
    padding: 10px;
    margin-bottom: 10px;
  }
  
  .dark-form-group {
    background-color: #2a2a2a;
    border: 1px solid #444;
    padding: 10px;
    margin-bottom: 10px;
  }
  
  .enriched-bio {
    background-color: #1a1a1a;
    color: #e0e0e0;
    border: 1px solid #444;
    padding: 10px;
    min-height: 150px;
  }
  
  .afflictions-table {
    width: 100%;
    border-collapse: collapse;
  }
  
  .afflictions-table th, .afflictions-table td {
    border: 1px solid #444;
    padding: 8px;
    text-align: left;
  }
  
  .roll-affliction {
    background-color: #444;
    color: #e0e0e0;
    border: none;
    padding: 10px;
    cursor: pointer;
    margin-top: 10px;
  }
  
  .roll-affliction:hover {
    background-color: #555;
  }

</style>