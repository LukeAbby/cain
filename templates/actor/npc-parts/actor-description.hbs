<div class="tab description" data-group="primary" data-tab="description">
  <div class="form-grid">
    <div class="form-group dark-form-group">
      <label for="system.appearance" class="centered-label">Appearance</label>
      {{ editor enrichedBiography target='system.appearance' engine='prosemirror' button=true editable=editable class="mob-psycho-editor" }}
      <textarea name="system.appearance" class="large-textarea">{{system.appearance}}</textarea>
    </div>
    <div class="form-group dark-form-group">
      <label for="system.traumas" class="centered-label">Traumas</label>
      <div class="trauma-list">
        {{#each system.traumas as |trauma index|}}
          <div class="trauma-item">
            <input type="checkbox" name="system.traumas[{{index}}].answered" {{#if trauma.answered}}checked{{/if}} />
            <input type="text" name="system.traumas[{{index}}].question" value="{{trauma.question}}" class="trauma-question-input {{#if trauma.answered}}crossed-out{{/if}}" />
          </div>
        {{/each}}
      </div>
    </div>
    <div class="form-group dark-form-group full-width">
      <label for="system.biography" class="centered-label">Biography</label>
      {{ editor enrichedBiography target='system.biography' engine='prosemirror' button=true editable=editable class="mob-psycho-editor" }}
    </div>
  </div>
</div>


