<form class="{{cssClass}} form-blasphemy-power {{system.blasphemyType}}-theme" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{this.img}}" data-edit="img" title="{{system.powerName}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{system.powerName}}" placeholder="Name" disabled/></h1>
      <div class="form-group">
        <label for="classType">Type</label>
        <input type="text" name="system.classType" value="{{system.blasphemyType}}" disabled/>
      </div>
      <div class="form-group">
        <label for="isPassive">Is Passive</label>
        <input type="checkbox" name="system.isPassive" {{#if system.isPassive}}checked{{/if}} disabled/>
      </div>
      <div class="form-group">
        <label for="keywords">Keywords</label>
        <input type="text" name="system.keywords" value="{{system.keywords}}" disabled/>
      </div>
    </div>
  </header>

  <section class="sheet-body">
    <section class="color-pickers">
      <div class="form-group">
        <label for="primaryColor">Primary Color</label>
        <input type="color" id="primaryColor" data-id="primary-color" value="{{system.primaryColor}}">
      </div>
      <div class="form-group">
        <label for="accentColor">Accent Color</label>
        <input type="color" id="accentColor" data-id="accent-color" value="{{system.accentColor}}">
      </div>
      <div class="form-group">
        <label for="secondaryColor">Secondary Color</label>
        <input type="color" id="secondaryColor" data-id="secondary-color" value="{{system.secondaryColor}}">
      </div>
      <div class="form-group">
        <label for="textColor">Text Color</label>
        <input type="color" id="textColor" data-id="text-color" value="{{system.textColor}}">
      </div>
    </section>
    
    <w>{{#formatted system.powerDescription}}{{/formatted}}</w>
  </section>
</form>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Lacquer&display=swap');

  .form-blasphemy-power {
    display: flex;
    flex-direction: column;
    height: 100%;
    border-radius: 10px;
    padding: 20px;
    gap: 20px;
    box-shadow: 10px 10px 0 rgba(0, 0, 0, 0.5), -10px -10px 0 rgba(0, 0, 0, 0.5), 10px -10px 0 rgba(0, 0, 0, 0.5), -10px 10px 0 rgba(0, 0, 0, 0.5);
    font-family: 'Lacquer', sans-serif;
    background-color: var(--primary-color, #2a2a2a);
    color: var(--text-color, #ffffff);
  }

  .form-blasphemy-power label {
    font-weight: bold;
    color: var(--text-color, #ffffff);
  }

  .form-blasphemy-power .sheet-header {
    display: flex;
    flex-direction: row;
    gap: 20px;
    align-items: center;
  }

  .form-blasphemy-power .header-fields {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .form-blasphemy-power .form-group {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .form-blasphemy-power .charname {
    font-size: 24px;
    font-weight: bold;
  }

  .form-blasphemy-power .color-pickers {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-top: 20px;
  }

  .form-blasphemy-power .color-pickers .form-group {
    flex: 1;
    min-width: 150px;
  }

  .form-blasphemy-power input[type="color"] {
    width: 100%;
    height: 40px;
    border: none;
    cursor: pointer;
  }

  .form-blasphemy-power input[type="text"],
  .form-blasphemy-power input[type="checkbox"] {
    background-color: #2a2a2a;
    color: #f0f0f0;
    border: 2px solid #333;
    border-radius: 5px;
    padding: 5px;
    font-family: 'Lacquer', sans-serif;
    font-size: 16px;
    font-weight: 400;
  }

  .form-blasphemy-power input[type="checkbox"] {
    width: auto;
    height: auto;
  }

  .form-blasphemy-power .profile-img {
    border: none;
    max-width: 100px;
    border-radius: 10px;
    height: auto;
  }

  .form-blasphemy-power .sheet-body {
    flex-grow: 1;
    margin-top: 20px;
    overflow-y: auto;
  }
</style>