<form class="{{cssClass}} form-blasphemy-power {{system.blasphemyType}}-theme" autocomplete="off" style="--primary-color: {{system.primaryColor}}; --accent-color: {{system.accentColor}}; --secondary-color: {{system.secondaryColor}}; --text-color: {{system.textColor}};">
  <header class="blasphemy-power-header">
    <img class="profile-img" src="{{this.img}}" data-edit="img" title="{{system.powerName}}"/>
    <div class="header-fields">
      <div class="form-group">
        <label for="name">Power Name</label>
        <input name="name" type="text" value="{{system.powerName}}" placeholder="Name"/>
      </div>
      <div class="form-group">
        <label for="isPassive">Is Passive</label>
        <input type="checkbox" name="system.isPassive" {{#if system.isPassive}}checked{{/if}}/>
      </div>
      <div class="form-group">
        <label for="keywords">Keywords</label>
        <input type="text" name="system.keywords" value="{{system.keywords}}"/>
      </div>
    </div>
  </header>

  <section class="blasphemy-power-body">
    <h2>Description</h2>
    <p>{{formatted system.powerDescription "description"}}</p>
  
{{#unless disableColorPickers}}
  <div class="color-picker-container">
    <button class="color-picker-toggle">
      <i class="fas fa-palette"></i>
    </button>
    <div class="color-pickers">
      <input type="color" id="primaryColor" data-id="primary-color" value="{{system.primaryColor}}" title="Primary Color">
      <input type="color" id="accentColor" data-id="accent-color" value="{{system.accentColor}}" title="Accent Color">
      <input type="color" id="secondaryColor" data-id="secondary-color" value="{{system.secondaryColor}}" title="Secondary Color">
      <input type="color" id="textColor" data-id="text-color" value="{{system.textColor}}" title="Text Color">
    </div>
  </div>
  {{/unless}}

  </section>
</form>

