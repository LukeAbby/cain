<form class="{{cssClass}} form-blasphemy" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{system.blasphemyName}}"/>
    <div class="header-fields">
      <h1 class="charname blasphemy-text">{{system.blasphemyName}}</h1>
      <div class="color-pickers">
        <label>Primary Color: <input type="color" id="primaryColor" data-id="primary-color" value="{{system.primaryColor}}"></label>
        <label>Accent Color: <input type="color" id="accentColor" data-id="accent-color" value="{{system.accentColor}}"></label>
        <label>Secondary Color: <input type="color" id="secondaryColor" data-id="secondary-color" value="{{system.secondaryColor}}"></label>
        <label>Text Color: <input type="color" id="textColor" data-id="text-color" value="{{system.textColor}}"></label>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="passive">Passive</a>
    <a class="item" data-tab="powers">Powers</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class='sheet-body'>
    <div class='tab' data-group='primary' data-tab='passive'>
      {{#each blasphemyPassives}}
        {{> blasphemyPower this classOptions=["tension", "ardence", "flux", "vector", "gate", "smother", "whisper", "edit", "bind", "jaunt", "palace", "sympathy", "default"]}}
      {{/each}}
    </div>

    <div class='tab' data-group='primary' data-tab='powers'>
      {{#each blasphemyPowers}}
        {{> blasphemyPower this classOptions=["tension", "ardence", "flux", "vector", "gate", "smother", "whisper", "edit", "bind", "jaunt", "palace", "sympathy", "default"]}}
      {{/each}}
    </div>
  </section>
</form>

<style>
  .form-blasphemy {
    border-radius: 10px;
    border: 2px solid var(--secondary-color, #333);
    padding: 10px;
    gap: 10px;
    font-family: 'Courier New', monospace;
    background-color: var(--primary-color, #2a2a2a);
    color: var(--text-color, #ffffff);
  }

  .form-blasphemy label {
    font-weight: bold;
    color: var(--text-color, #ffffff);
  }

  .form-blasphemy .tab {
    background-color: var(--primary-color, #2a2a2a);
  }

  .form-blasphemy .sheet-header {
    background-color: var(--primary-color, #2a2a2a);
    border-radius: 5px;
    padding: 5px;
    font-family: 'Courier New', monospace;
    font-size: 16px;
    font-weight: 400;
    color: var(--text-color, #ffffff);
    border: 2px solid var(--accent-color, #f0f0f0);
  }

  .form-blasphemy .charname {
    font-size: 24px;
    font-weight: bold;
  }

  .color-pickers {
    display: flex;
    gap: 10px;
  }

  .color-pickers label {
    display: flex;
    align-items: center;
    gap: 5px;
  }
</style>