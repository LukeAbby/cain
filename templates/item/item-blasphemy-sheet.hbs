<form class="{{cssClass}} form-blasphemy {{toLowerCase system.blasphemyName}}-theme" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{system.blasphemyName}}"/>
    <div class="header-fields">
      <h1 class="charname blasphemy-text">{{system.blasphemyName}}</h1>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="passive">Passive</a>
    <a class="item" data-tab="powers">Powers</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class='sheet-body'>
    <div class='tab' data-group='primary' data-tab='passive'>
      {{#each blasphemyPassives}}
        {{> blasphemyPower this classOptions=["tension", "ardence", "flux", "vector", "gate", "smother", "whisper", "edit", "bind", "jaunt", "palace", "sympathy", "default"]}}
      {{/each}}
    </div>

    <div class='tab' data-group='primary' data-tab='powers'>
      {{#each blasphemyPowers}}
        {{> blasphemyPower this classOptions=["tension", "ardence", "flux", "vector", "gate", "smother", "whisper", "edit", "bind", "jaunt", "palace", "sympathy", "default"]}}
      {{/each}}
    </div>
  </section>
</form>

<style>
/* Dark Theme */
.form-blasphemy {
  background-color: #2a2a2a; /* Dark grey primary */
  color: #f0f0f0; /* Light grey secondary */
  border: 2px solid #444; /* Slightly lighter grey for border */
  border-radius: 10px;
  padding: 20px;
  max-width: 600px;
  margin: 0 auto;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
  font-family: 'Courier New', monospace;
}

.sheet-header {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  background-color: #333; /* Slightly lighter grey for header */
  border-radius: 5px;
  padding: 10px;
}

.profile-img {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-right: 20px;
  object-fit: cover;
  border: 2px solid #555; /* Slightly lighter grey for border */
}

.header-fields {
  flex-grow: 1;
}

.charname {
  font-size: 1.5em;
  margin: 0;
  margin-bottom: 10px;
  color: #f0f0f0; /* Light grey secondary */
}

.form-group {
  margin-bottom: 10px;
}

.form-group label {
  display: block;
  font-weight: bold;
  margin-bottom: 5px;
  color: #ccc; /* Light grey for labels */
}

.form-group input[type="text"],
.form-group input[type="checkbox"] {
  width: 100%;
  padding: 8px;
  border: 1px solid #555; /* Slightly lighter grey for border */
  border-radius: 4px;
  box-sizing: border-box;
  background-color: #444; /* Dark grey for input background */
  color: #f0f0f0; /* Light grey for input text */
}

.form-group input[type="checkbox"] {
  width: auto;
  margin-right: 10px;
}

.sheet-body {
  background-color: #333; /* Slightly lighter grey for body */
  padding: 15px;
  border-radius: 8px;
  border: 1px solid #555; /* Slightly lighter grey for border */
}

.sheet-body p {
  display: block;
  font-size: 1em;
  line-height: 1.5;
  color: #f0f0f0; /* Light grey for text */
}

.sheet-tabs .item {
  color: #f0f0f0; /* Light grey for tab text */
  background-color: #444; /* Dark grey for tab background */
  border: 1px solid #555; /* Slightly lighter grey for border */
  padding: 10px;
  border-radius: 5px;
  margin-right: 5px;
  cursor: pointer;
}

.sheet-tabs .item.active {
  background-color: #555; /* Slightly lighter grey for active tab */
}

.profile-img {
  border: none;
}

.form-blasphemy .charname {
  font-size: 24px;
  font-weight: bold;
}
</style>